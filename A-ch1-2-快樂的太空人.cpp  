#include <iostream>
using namespace std;

int main() {
    float weight, w_Mars, w_Jupiter;
    cout << "請輸入體重(公斤):";
    cin >> weight;
    w_Mars = weight * 0.38;
    w_Jupiter = weight * 2.34;
    cout << "在火星上，你的體重:" << w_Mars << endl;
    cout << "在木星上，你的體重:" << w_Jupiter << endl;

    return 0;
}

